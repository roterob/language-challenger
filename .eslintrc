{
  "parser": "babel-eslint",
  "extends": ["prettier", "plugin:meteor/recommended"],
  "plugins": ["meteor", "react", "react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "allowImportExportEverywhere": true
  }
}
