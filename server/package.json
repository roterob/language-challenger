        "@types/bcryptjs": "^2.4.6",
        "@types/better-sqlite3": "^7.6.12",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.7",
        "drizzle-kit": "^0.30.4",
